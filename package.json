{
  "name": "npm-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "babel": "babel src --out-dir lib",
    "build": "node ./scripts/build",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "docs": "rm -rf docs/api && mkdir docs/api && jsdoc -c jsdoc.json",
    "lint": "eslint .",
    "prebuild": "NODE_ENV=production",
    "prepush": "jest --no-cache",
    "prerelease": "npm run babel; npm test",
    "posttest": "npm run lint",
    "release": "standard-version --no-verify",
    "server": "cd docs && http-server",
    "start": "npm run build && npm run server",
    "test": "jest --no-cache --coverage",
    "watch": "NODE_ENV=development node ./scripts/watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixelass/npm-boilerplate.git"
  },
  "keywords": [],
  "author": "Gregor Adams <greg@pixelass.com> (http://pixelass.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pixelass/npm-boilerplate/issues"
  },
  "homepage": "https://github.com/pixelass/npm-boilerplate#readme",
  "dependencies": {
    "classnames": "^2.2.5",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-jest": "^16.0.0",
    "babel-plugin-istanbul": "^2.0.3",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "coveralls": "^2.11.14",
    "css-modulesify": "^0.25.1",
    "cz-conventional-changelog": "^1.2.0",
    "enzyme": "^2.5.1",
    "errorify": "^0.3.1",
    "eslint": "^3.8.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-react": "^6.4.1",
    "eslint-plugin-standard": "^2.0.1",
    "hopsdoc": "^0.1.7",
    "http-server": "^0.9.0",
    "husky": "^0.11.9",
    "jest": "^16.0.2",
    "jest-css-modules": "^1.1.0",
    "jsdoc": "^3.4.2",
    "livereactload": "^3.1.0",
    "log": "^1.4.0",
    "minus-grid": "^1.1.1",
    "postcss-cssnext": "^2.8.0",
    "react-addons-test-utils": "^15.3.2",
    "sinon": "^1.17.6",
    "standard-version": "^3.0.0",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      "babelify",
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react",
            "stage-0"
          ]
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/jest-css-modules",
    "testRegex": ".*/src/(.*/)?spec/.*\\.js$"
  }
}
